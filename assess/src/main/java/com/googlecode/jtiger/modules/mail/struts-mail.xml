<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- Mail management -->
	<package name="admin.mail" extends="default" namespace="/admin/mail">
		<action name="view" class="smtpConfigAction" method="view">
			<result name="success" type="dispatcher">/WEB-INF/views/admin/mail/view.jsp</result>
		</action>
		
		<action name="edit" class="smtpConfigAction" method="edit">
			<result name="success" type="dispatcher">/WEB-INF/views/admin/mail/edit.jsp</result>
		</action>
		<action name="save" class="smtpConfigAction" method="save">
			<result name="success" type="dispatcher">/WEB-INF/views/admin/mail/view.jsp</result>
			<result name="input" type="dispatcher">/WEB-INF/views/admin/mail/edit.jsp</result>
		</action>
		<action name="check" class="smtpConfigAction" method="check">			
		</action>
	</package>
</struts>

